%p#notice= notice

%h2= @character.name

%p
  = link_to 'Edit', edit_character_path(@character)
  \|
  = link_to 'Back', characters_path

%p
  %b User:
  = @character.user
%p
  %b Party:
  = @character.party


%h3= link_to "Fördjupningar:", skills_path

- @character.skill_levels.each do |slevel|
  %h4 #{slevel.skill_tree.name} (FV #{slevel.level})
  -(1..5).each do |level|
    - skills = @character.skills.level(level).skill_tree(slevel.skill_tree_id)
    - unless skills.empty?
      %h5 Nivå #{level}
      %ul
        - skills.each do |skill|
          %li= skill

